<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/icon_listView"
        android:contentDescription="@string/worker_img"
        android:layout_width="@dimen/hundred_four"
        android:layout_height="@dimen/seventy_two"
        android:layout_marginBottom="@dimen/eight"
        android:layout_marginTop="@dimen/eight"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/seventy_two"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/eight">

        <TextView
            android:id="@+id/name_worker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/eight"
            android:textColor="@color/colorPrimaryDark"/>
        <TextView
            android:id="@+id/profession_worker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/black"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</LinearLayout>